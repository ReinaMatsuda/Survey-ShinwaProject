<% layout('layouts/plate')%>
<div class="container">
        <div class="row gutters-sm">
            <div class="col-md-4 mb-3">
              <div class="card shadow-lg">
                <div class="card-body">
                  <div class="d-flex flex-column align-items-center text-center">
                    <% if (profile.avatar) { %>
                        <img src="<%= profile.avatar.url %>" alt="Avatar" class="rounded-circle border border-danger-subtle" width="150" height="150">
                        <div class="mt-3">
                    <% } else {%>
                        <img src="https://res.cloudinary.com/dst4fltpn/image/upload/v1715345699/defaultProfile_uby8p6.jpg" alt="Avatar" class="rounded-circle" width="150" height="150">
                        <div class="mt-3">
                    <% } %>
                      <h4><%= user.username %></h4>
                      <% if(currentUser && currentUser.profile == profile.id)  {%>
                        <a class="btn btn-success" href="/user/<%= profile.id %>/profile/edit" >Edit profile</a>
                        <% } %>
                  </div>
                </div>
            </div>
        </div>
        <div class="card mt-3 shadow-lg">
            <ul class="list-group list-group-flush">
              <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                <h6 class="mb-0">Total submited survey</h6>
                <span class="text-secondary"><%= user.userAnswers.length %></span>
              </li>
              <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                <h6 class="mb-0">Number of surveys created</h6>
                <span class="text-secondary"><%= user.userSurveys.length %></span>
              </li>
            </ul>
          </div>
        </div>
    <div class="col-md-8">
        <div class="row gutters-sm">
            <div class="col mb-3">
                <div class="card h-100">
                    <div class="card-body shadow-lg">
                        <h6 class="d-flex align-items-center mb-3"><i class="material-icons text-info mr-2 " >Created Surveys</i></h6>
                        <div class="container">
                          <div class="row">
                              <% for (let i = 0 ; i < userSurveys.length; i++) { %>
                                  <div class="col-md-4 col-sm-6 mb-3">
                                      <div class="card rounded text-center ">
                                        <div class="card-header">
                                          <h5 class="card-title"><%= userSurveys[i].title %></h5>
                                        </div>
                                          <div class="card-body">
                                              <a href="/surveys/<%= userSurveys[i]._id %>" class="btn btn-outline-primary mt-3">Start Survey</a>
                                          </div>
                                      </div>
                                  </div>
                              <% } %>
                          </div>
                        </div>
                      </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
